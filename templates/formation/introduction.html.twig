<div class="max-w-5xl mx-auto py-6 sm:px-6 lg:px-8">
    {% if vich_uploader_asset(tutorial, 'imageFile') %}
        <div class="flex flex-col items-center">
            <a href="{{ path('app_formation_show',{'id': tutorial.id }) }}">
                <img src="{{ vich_uploader_asset(tutorial, 'imageFile') }}" alt="" class="w-[1000px] h-[250px] object-cover">
            </a>
        </div>
    {% endif %}
    <p class="mt-4 text-left">
        {{ description | raw}}
    </p>
    {% if chapterOne is not null %}
         <div class="mt-10 flex justify-end">
            <a  href="{{ path('app_formation_chapter_show',{'id': tutorial.id,'chapterId': chapterOne.id }) }}" class="text-white hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none flex"  style="background-color:#4748EE">
                <span class="mr-1">Suivant</span> 
                <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
                </svg>
            </a>
        </div>
        {% if app.user is not null %}
            <div class="mt-10 flex justify-center">
                <a  href="{{ path('app_histories',{'id': tutorial.id,'currentChapterId':-1,'chapterId': chapterOne.id }) }}" class="text-white hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none flex"  style="background-color:#4748EE">
                    <span class="mr-1"> Confimer que ce chapitre est terminé</span>
                </a>
            </div>
        {% endif %}
        
    {% else %}
        <div class="mt-10 flex justify-end">
            <a  href="{{ path('app_formation_finish',{'id': tutorial.id}) }}" class="text-white hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none flex"  style="background-color:#4748EE">
                <span class="mr-1">Suivant</span> 
                <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
                </svg>
            </a>
        </div>
        {% if app.user is not null %}
            <div class="mt-10 flex justify-center">
                <a  href="{{ path('app_histories',{'id': tutorial.id,'currentChapterId':-1,'chapterId': -2 }) }}" class="text-white hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none flex"  style="background-color:#4748EE">
                    <span class="mr-1"> Confimer que ce chapitre est terminé</span>
                    
                </a>
            </div>
        {% endif %}
         
    {% endif %}

</div>
