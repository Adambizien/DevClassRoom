{% extends 'base.html.twig' %}

{% block title %}Histories index{% endblock %}

{% block body %}
    <h1>Histories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Progression</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for history in histories %}
            <tr>
                <td>{{ history.id }}</td>
                <td>{{ history.createdAt ? history.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ history.updatedAt ? history.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ history.progression }}</td>
                <td>
                    <a href="{{ path('app_histories_show', {'id': history.id}) }}">show</a>
                    <a href="{{ path('app_histories_edit', {'id': history.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_histories_new') }}">Create new</a>
{% endblock %}
