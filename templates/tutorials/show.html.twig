{% extends 'base.html.twig' %}

{% block title %}Tutorials{% endblock %}

{% block body %}
    <h1>Tutorials</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tutorial.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ tutorial.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tutorial.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ tutorial.author }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ tutorial.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tutorial.createdAt ? tutorial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ tutorial.updatedAt ? tutorial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ tutorial.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tutorials_index') }}">back to list</a>

    <a href="{{ path('app_tutorials_edit', {'id': tutorial.id}) }}">edit</a>

    {{ include('tutorials/_delete_form.html.twig') }}
{% endblock %}
